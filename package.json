{
  "name": "zotero-named-annotations",
  "version": "1.0.2",
  "description": "Add custom names to Zotero's annotation colors and surface them in the reader.",
  "config": {
    "addonName": "Zotero Named Annotations",
    "addonID": "zoteronamedannotations@oliverdudgeon.dev",
    "addonInstance": "ZoteroNamedAnnotations",
    "addonRef": "zotero-named-annotations",
    "releasepage": "https://github.com/OliverDudgeon/zotero-named-annotations/releases/latest/download/zotero-named-annotations.xpi",
    "updaterdf": "https://raw.githubusercontent.com/OliverDudgeon/zotero-named-annotations/main/update.json"
  },
  "main": "src/index.ts",
  "scripts": {
    "build-dev": "cross-env NODE_ENV=development node scripts/build.js",
    "build-prod": "cross-env NODE_ENV=production node scripts/build.js",
    "build": "concurrently -c auto npm:build-prod npm:tsc",
    "tsc": "tsc --noEmit",
    "start-z6": "node scripts/start.js --z 6",
    "start-z7": "node scripts/start.js --z 7",
    "start": "node scripts/start.js",
    "stop": "node scripts/stop.js",
    "restart-dev": "npm run build-dev && npm run stop && npm run start",
    "restart-prod": "npm run build-prod && npm run stop && npm run start",
    "restart": "npm run restart-dev",
    "restart-z7": "npm run build-dev && npm run stop && npm run start-z7",
    "release": "release-it",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OliverDudgeon/zotero-named-annotations.git"
  },
  "author": "Oliver Dudgeon",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/OliverDudgeon/zotero-named-annotations/issues"
  },
  "homepage": "https://github.com/OliverDudgeon/zotero-named-annotations",
  "dependencies": {
    "minimist": "^1.2.8",
    "zotero-plugin-toolkit": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "compressing": "^1.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.16.17",
    "release-it": "^15.6.0",
    "replace-in-file": "^6.3.5",
    "typescript": "^5.3.3",
    "zotero-types": "^2.2.1"
  }
}
